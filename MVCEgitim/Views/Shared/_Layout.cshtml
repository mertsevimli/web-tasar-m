<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCEgitim</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCEgitim.styles.css" asp-append-version="true" />
    <link type="image/x-icon" rel="icon" href="/cropped-favicon-32x32.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
            @await RenderSectionAsync("OzelCss", required: false) 
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Home/Index" >
                <img src="/Images/logoInfotechAcademy.png" alt=""></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                     
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Anasayfa" asp-action="Hakkimizda">Hakkımızda</a>
                        </li>
                          <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Anasayfa" asp-action="Ders12OrnekTasarim">Sayfa Tasarımı</a>
                        </li>
                           <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="MVC01RazorSyntax" asp-action="Index">RazorSyntax</a>
                        </li>
                            
                           <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="MVC02HtmlAndTagHelpers" asp-action="Index">HtmlAndTagHelpers</a>
                        </li>

                            <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="MVC03DataTransfer" asp-action="Index">DataTransfer</a>
                        </li>
                          <li class="nav-item">
                            
                            <a class="nav-link text-dark" asp-area="" asp-controller="MVC04ModelBinding" asp-action="Index">Model Binding</a>
                        </li>
                            <li class="nav-item">
                            
                            <a class="nav-link text-dark" asp-area="" asp-controller="MVC05ModelValidation" asp-action="Index">Model Validation</a>
                        </li>
                          <li class="nav-item">
                            
                            <a class="nav-link text-dark" asp-area="" asp-controller="MVC06CRUD" asp-action="Index">CRUD</a>
                        </li>

                         <li class="nav-item">
                            
                            <a class="nav-link text-dark" asp-area="" asp-controller="MVC07Section" asp-action="Index">MVC Section</a>
                        </li>
                        <partial name="_PartialMenu"> </partial>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MVCEgitim - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
        @await RenderSectionAsync("OzelIcerik", required: false) 
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
